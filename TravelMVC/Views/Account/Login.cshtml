@{
  Layout = "_Layout";
}

@using TravelMVC.ViewModels

@model LoginViewModel

<h2>Log in with your account</h2>
<hr />
@using (Html.BeginForm())
{
  <div class="form-group">
    <h3>@Html.LabelFor(user => user.Email)</h3>
    @Html.EditorFor(user=> user.Email, new { htmlAttributes = new { @class = "form-control", @type="email" } })
  </div>

  <div class="form-group">
    <h3>@Html.LabelFor(user => user.Password)</h3>
    @Html.EditorFor(user=> user.Password, new { htmlAttributes = new { @class = "form-control", @type="password" } })
  </div>

    <input type="submit" value="Log in" class="btn btn-success" />
}