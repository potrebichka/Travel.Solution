@model TravelMVC.Models.Review

<h2>Are you sure you want to delete this review?</h2>

<h3>@Html.DisplayNameFor(model => model.ReviewId): @Html.DisplayFor(model => model.ReviewId)</h3>
<h3>@Html.DisplayNameFor(model => model.Destination.City): @Html.DisplayFor(model => model.Destination.City)</h3>
<h3>@Html.DisplayNameFor(model => model.Destination.Country): @Html.DisplayFor(model => model.Destination.Country)</h3>
<h3>@Html.DisplayNameFor(model => model.Description): @Html.DisplayFor(model => model.Description)</h3>
@using (Html.BeginForm())
{
    <input type="submit" value="Delete" class="btn btn-danger"/>
}

<hr/>
<h3>@Html.ActionLink("Back to review", "Details", new {id = Model.ReviewId}, new { @class = "tab" } )</h3>
<h3>@Html.ActionLink("Back to list of reviews", "Index", null, null, new { @class = "tab" } )</h3>